<h1>新規投稿</h1>

<div class="row">
  <div >
    <%= form_for(@article, url: articles_new_path) do |f| %>
      
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control'  %><br>
      
      <%= f.label :content %><br>
      <%= f.text_area  :content, class: 'form-control'  %><br>

      <%= f.submit "Create new article", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
