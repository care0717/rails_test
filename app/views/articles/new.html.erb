<h1>新規投稿</h1>

<div class="row">
  <div >
    <%= form_for(@article, url: articles_new_path) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control'  %>
      
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control'  %>

      <%= f.submit "Create new article", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
