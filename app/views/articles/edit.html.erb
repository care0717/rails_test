<h1>編集</h1>

<div class="row">
  <div >
    <%= form_for(@article, url: "/articles/#{@article.id}/edit") do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control'  %>
      
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control'  %>

      <%= f.submit "Update article", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
